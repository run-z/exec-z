{
  "name": "@run-z/exec-z",
  "version": "1.4.1",
  "description": "Abortable executions",
  "keywords": [
    "abortable",
    "cancelable",
    "promise"
  ],
  "homepage": "https://github.com/run-z/exec-z",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:run-z/exec-z.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/run-z/exec-z/issues"
  },
  "type": "module",
  "main": "./dist/exec-z.js",
  "types": "./index.d.ts",
  "exports": "./dist/exec-z.js",
  "dependencies": {
    "@proc7ts/primitives": "^3.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "@run-z/eslint-config": "^3.0.0",
    "@run-z/rollup-helpers": "^2.0.0",
    "@types/node": "^14.18.12",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-plugin-jest": "^26.1.1",
    "gh-pages": "^3.2.3",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "jest-mock": "^27.5.1",
    "prettier": "^2.5.1",
    "remark-cli": "^10.0.1",
    "remark-lint-emphasis-marker": "^3.1.1",
    "remark-lint-final-definition": "^3.1.1",
    "remark-lint-list-item-indent": "^3.1.1",
    "remark-lint-maximum-line-length": "^3.1.2",
    "remark-lint-no-shortcut-reference-link": "^3.1.1",
    "remark-lint-ordered-list-marker-value": "^3.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "rollup": "^2.70.0",
    "rollup-plugin-flat-dts": "^1.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "run-z": "=1.10.0-bootstrap",
    "shx": "^0.3.4",
    "strip-ansi": "^7.0.1",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "rollup -c",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf 'index.d.ts?(.map)' dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "format": "run-z +z --then prettier --write \"**.{json,md}\"",
    "lint": "run-z + lint:md --and eslint .",
    "lint:md": "run-z +z --then remark .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:remark,+cmd:jest"
  }
}
